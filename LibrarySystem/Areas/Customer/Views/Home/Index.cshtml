@model List<Book>
@{
    ViewData["Title"] = "الصفحة الرئيسية - الكتب";
    Layout = "_Layout";
}
@section Scripts {
    <partial name="_NotifactionPartial" />
}

@* <!-- Header--> *@
@* <header class="bg-dark py-5"> *@
@*     <div class="container px-4 px-lg-5 my-5"> *@
@*         <div class="text-center text-white"> *@
@*             <h1 class="display-4 fw-bolder">Shop in style</h1> *@
@*             <p class="lead fw-normal text-white-50 mb-0">With this shop hompeage template</p> *@
@*         </div> *@
@*     </div> *@
@* </header> *@

<div class="container">

    <!-- Filter Section -->
    <section class="py-3 filter-bar">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6" style="background-color: rgba(var(--bs-light-rgb), var(--bs-bg-opacity)) !important; padding: 20px; border-radius: 10px;">
                    <form method="get">
                        <div class="row g-2">

                            <!-- Book Title -->
                            <div class="col-12">
                                <input type="text" class="form-control" placeholder="اسم الكتاب" name="BookTitle" value="@ViewBag.BookTitle">
                            </div>

                            <!-- BookAuthor -->
                            <div class="col-12">
                                <select name="BookAuthor" class="form-control">
                                    <option value="">-- اختر المؤلف --</option>
                                    @foreach (var item in ViewBag.Books)
                                    {
                                        if (ViewBag.BookAuthor != null && ViewBag.BookAuthor == item.Author)
                                        {
                                            <option value="@item.Author" selected>@item.Author</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Author">@item.Author</option>
                                        }
                                    }
                                </select>
                            </div>
                            <!-- Submit Button -->
                            <div class="col-12">
                                <button type="submit" class="btn btn-dark w-100">بحث</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                @foreach(var item in Model)
                {

                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Sale badge-->
                            <div class="badge bg-danger text-white position-absolute" style="top: 0.5rem; right: 0.5rem">@item.Author</div>
                            <!-- Product image-->
                            <img class="card-img-top book-image"
                                 src="@(item.ImageUrl.StartsWith("/images/") || item.ImageUrl.StartsWith("~/images/") ? item.ImageUrl : Url.Content("~/images/" + item.ImageUrl))"
                                 alt="@item.Title" />

                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">@item.Title</h5>
                                    <!-- Product price-->
                                    📚 إجمالي النسخ: <b>@item.TotalCopies</b><br />
                                    🟢 النسخ المتاحة: <b>@item.AvailableCopies</b>
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent d-flex justify-content-center">
                                <a asp-area="Customer"
                                   asp-controller="Home"
                                   asp-action="Details"
                                   asp-route-id="@item.Id"
                                   class="btn btn-outline-dark mt-auto">
                                    تفاصيل الكتاب
                                </a>

                            </div>
                        </div>
                    </div>
                }
            </div>
            @* pagination *@
        </div>
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        @if (ViewBag.CurrentPage != 1)
                        {
                            <li class="page-item"><a class="page-link" href="/Customer/Home/Index?page=@(@ViewBag.CurrentPage-1)">Previous</a></li>

                        }
                        @for (var i = 1; i <= ViewBag.totalPages; i++)
                        {
                            if (i == ViewBag.CurrentPage)
                            {
                                <li class="page-item active"><a class="page-link" href="/Customer/Home/Index?page=@i&BookTitle=@ViewBag.BookTitle">@i</a></li>

                            }
                            else
                            {
                                <li class="page-item"><a class="page-link" href="/Customer/Home/Index?page=@i&BookAuthor=@ViewBag.BookAuthor">@i</a></li>

                            }

                        }
                        @if (ViewBag.totalPages != ViewBag.CurrentPage)
                        {
                            <li class="page-item"><a class="page-link" href="/Customer/Home/Index?page=@(@ViewBag.CurrentPage+1)">Next</a></li>

                        }
                    </ul>

                </nav>
        </div>
    </section>
</div>


<style>
    .book-image {
        width: 100%;
        height: 400px; /* تقدر تزود أو تقلل حسب التصميم */
        object-fit: cover; /* بيخلي الصورة تملى المساحة بدون تشوه */
        border-radius: 8px; /* لمسة جمالية بسيطة */
    }
</style>
