@model LibrarySystem.Models.ViewModel.RegisterVM

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5" style="max-width:600px;">
    <h2 class="text-center mb-4">إنشاء حساب جديد</h2>

    <form asp-area="Identity" asp-controller="Accounts" asp-action="Register" method="post">
        @Html.AntiForgeryToken()


        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="اكتب اسمك بالكامل" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="UserName" class="form-label"></label>
            <input asp-for="UserName" class="form-control" placeholder="اسم المستخدم" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" type="email" class="form-control" placeholder="البريد الإلكتروني" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="كلمة المرور" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="ConfirmPassword" class="form-label"></label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="تأكيد كلمة المرور" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">تسجيل</button>
        </div>
    </form>

    <div class="mt-4 text-center">
        <a asp-area="Identity" asp-controller="Accounts" asp-action="Login" class="text-decoration-none">
            لديك حساب بالفعل؟ تسجيل الدخول
        </a>
    </div>
</div>

@* تفعيل الـ client-side validation *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
